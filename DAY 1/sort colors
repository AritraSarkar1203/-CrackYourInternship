class Solution {
public:
    void sortColors(vector<int>& nums) {
        int n=nums.size();
       /* std::sort(nums.begin(),nums.end());*/
        int index=0;
        for(int i=0;i<n;i++){
            if(nums[i]==0){
                swap(nums[i],nums[index]);
                index++;
            }
        }
        for(int j=index;j<n;j++){
            if(nums[j]==1) swap(nums[j],nums[index]);
            index++;
        }
        
    }
};
